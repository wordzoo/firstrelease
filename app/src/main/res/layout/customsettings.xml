<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp">


    <TextView
        android:id="@+id/preview_label"
        style="@style/DialogLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:text="@string/preview"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/preview"
        style="@style/DialogLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:text="8:45"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/testclock"
            style="@style/ClockWidget" />
    </LinearLayout>

    <Space
        android:layout_width="fill_parent"
        android:layout_height="15sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel" />


        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:visibility="gone" />

        <Button
            android:id="@+id/saveas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saveas" />
    </LinearLayout>

    <Space
        android:layout_width="fill_parent"
        android:layout_height="15sp" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    style="@style/DialogLabel"
                    android:text="@string/basic" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/esist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onCheckboxClicked"
                        android:text="Es ist" />


                    <CheckBox
                        android:id="@+id/minute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onCheckboxClicked"
                        android:text="Minute(n)" />

                    <CheckBox
                        android:id="@+id/uhr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onCheckboxClicked"
                        android:text="Uhr" />


                </LinearLayout>

                <CheckBox
                    android:id="@+id/mult_of_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="@string/stars" />

                <CheckBox
                    android:id="@+id/kurz_nach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="kurz nach" />

                <CheckBox
                    android:id="@+id/kurz_vor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="kurz vor" />
            </LinearLayout>

            <Space
                android:layout_width="fill_parent"
                android:layout_height="15sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    style="@style/DialogLabel"
                    android:text="@string/halb" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/halber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onCheckboxClicked"
                        android:paddingRight="10dp"
                        android:text="Halber" />

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:padding="3dp"
                        android:singleLine="false"
                        android:text="@string/range_before_after_halb" />

                    <EditText
                        android:id="@+id/halber_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="   "
                        android:inputType="number"
                        android:onClick="onHalberRangeClick"/>




                </LinearLayout>

                <CheckBox
                    android:id="@+id/halb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="halb" />


                <CheckBox
                    android:id="@+id/fuenf_vor_halb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="fuenf vor halb" />

                <CheckBox
                    android:id="@+id/fuenf_nach_halb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="fuenf nach halb" />

                <CheckBox
                    android:id="@+id/zehn_vor_halb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="zehn vor halb" />

                <CheckBox
                    android:id="@+id/zehn_nach_halb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="zehn nach halb" />


                <CheckBox
                    android:id="@+id/kurz_vor_halb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="kurz vor halb" />

                <CheckBox
                    android:id="@+id/kurz_nach_halb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="kurz nach halb" />
            </LinearLayout>

            <Space
                android:layout_width="fill_parent"
                android:layout_height="15sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <LinearLayout style="@style/DialogItem">

                    <TextView
                        style="@style/DialogLabel"
                        android:text="@string/dreiviertel" />

                    <Spinner
                        android:id="@+id/dreiviertel"
                        style="@style/DropDownCombo" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/kurz_vor_dreiviertel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="kurz vor dreiviertel" />

                <CheckBox
                    android:id="@+id/kurz_nach_dreiviertel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="kurz nach dreiviertel" />

                <CheckBox
                    android:id="@+id/fuenf_vor_dreiviertel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="fuenf vor dreiviertel" />

                <CheckBox
                    android:id="@+id/fuenf_nach_dreiviertel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="fuenf nach dreiviertel" />

            </LinearLayout>

            <Space
                android:layout_width="fill_parent"
                android:layout_height="15sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:orientation="vertical">

                <LinearLayout style="@style/DialogItem">

                    <TextView
                        style="@style/DialogLabel"
                        android:text="@string/viertel" />

                    <Spinner
                        android:id="@+id/viertel"
                        style="@style/DropDownCombo" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/kurz_vor_viertel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="kurz vor viertel" />

                <CheckBox
                    android:id="@+id/kurz_nach_viertel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="kurz nach viertel" />

                <CheckBox
                    android:id="@+id/fuenf_vor_viertel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="fuenf vor viertel" />

                <CheckBox
                    android:id="@+id/fuenf_nach_viertel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="fuenf nach viertel" />


            </LinearLayout>


            <Space
                android:layout_width="fill_parent"
                android:layout_height="15sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    style="@style/DialogLabel"
                    android:text="@string/time_of_day" />

                <LinearLayout style="@style/DialogItem">

                    <TextView
                        style="@style/DialogLabelSmall"
                        android:text="@string/morgen" />

                    <Spinner
                        android:id="@+id/morgen"
                        style="@style/DropDownCombo" />
                </LinearLayout>

                <LinearLayout style="@style/DialogItem">

                    <TextView
                        style="@style/DialogLabelSmall"
                        android:text="@string/vormittag" />

                    <Spinner
                        android:id="@+id/vormittag"
                        style="@style/DropDownCombo" />
                </LinearLayout>

                <LinearLayout style="@style/DialogItem">

                    <TextView
                        style="@style/DialogLabelSmall"
                        android:text="@string/mittag" />

                    <Spinner
                        android:id="@+id/mittag"
                        style="@style/DropDownCombo" />
                </LinearLayout>

                <LinearLayout style="@style/DialogItem">

                    <TextView
                        style="@style/DialogLabelSmall"
                        android:text="@string/nachmittag" />

                    <Spinner
                        android:id="@+id/nachmittag"
                        style="@style/DropDownCombo" />
                </LinearLayout>

                <LinearLayout style="@style/DialogItem">

                    <TextView
                        style="@style/DialogLabelSmall"
                        android:text="@string/abend" />

                    <Spinner
                        android:id="@+id/abend"
                        style="@style/DropDownCombo" />
                </LinearLayout>

                <LinearLayout style="@style/DialogItem">

                    <TextView
                        style="@style/DialogLabelSmall"
                        android:text="@string/nacht" />

                    <Spinner
                        android:id="@+id/nacht"
                        style="@style/DropDownCombo" />
                </LinearLayout>

                <LinearLayout style="@style/DialogItem">

                    <TextView
                        style="@style/DialogLabelSmall"
                        android:text="@string/early" />

                    <Spinner
                        android:id="@+id/frueh"
                        style="@style/DropDownCombo" />
                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="fill_parent"
                android:layout_height="15sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    style="@style/DialogLabel"
                    android:text="@string/hybrid" />


                <CheckBox
                    android:id="@+id/hybrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:paddingRight="10dp"
                    android:text="@string/hybrid_desc" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

