
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp">



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/preview"
        style="@style/DialogLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:textAlignment="center"
        android:text="8:45"
        android:textSize="40dp"
        android:textStyle="bold"
        android:onClick="timeOnClick"/>




    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/testclock"
            style="@style/ClockWidget" />
    </LinearLayout>

    <Space
        android:layout_width="fill_parent"
        android:layout_height="15sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/cancel"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel" />


        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/save"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:visibility="gone" />

        <Button
            android:layout_marginLeft="10dp"
            style="@style/Button"
            android:id="@+id/saveas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saveas" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:paddingBottom="10dp">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">



                <TextView
                    style="@style/DialogLabel"
                    android:text="@string/basic" />


                    <CheckBox
                        android:id="@+id/esist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onCheckboxClicked"
                        android:text="@string/esist" />


                    <CheckBox
                        android:id="@+id/minute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onCheckboxClicked"
                        android:text="@string/minuten" />

                    <CheckBox
                        android:id="@+id/uhr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onCheckboxClicked"
                        android:text="@string/uhr" />






                <CheckBox
                    android:id="@+id/kurz_vor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="@string/kurz_vor" />

                <CheckBox
                    android:id="@+id/kurz_nach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="@string/kurz_nach" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="15sp" />


                <TextView
                    style="@style/DialogLabel"
                    android:text="@string/halb_stunde" />

                <CheckBox
                    android:id="@+id/halb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="@string/halb" />


                <CheckBox
                    android:id="@+id/fuenf_vor_halb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="@string/fuenf_vor_halb" />

                <CheckBox
                    android:id="@+id/fuenf_nach_halb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="@string/fuenf_nach_halb" />

                <CheckBox
                    android:id="@+id/zehn_vor_halb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="@string/zehn_vor_halb" />

                <CheckBox
                    android:id="@+id/zehn_nach_halb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="@string/zehn_nach_halb" />


                <CheckBox
                    android:id="@+id/kurz_vor_halb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="@string/kurz_vor_halb" />

                <CheckBox
                    android:id="@+id/kurz_nach_halb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="@string/kurz_nach_halb" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="15sp" />


                <LinearLayout style="@style/DialogItem">

                    <TextView
                        style="@style/DialogLabel"
                        android:text="@string/dreiviertel" />

                    <Spinner
                        android:id="@+id/dreiviertel_combo"
                        style="@style/DropDownCombo" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/kurz_vor_dreiviertel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="@string/kurz_vor_dreiviertel" />

                <CheckBox
                    android:id="@+id/kurz_nach_dreiviertel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="@string/kurz_nach_dreiviertel" />

                <CheckBox
                    android:id="@+id/fuenf_vor_dreiviertel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="@string/fuenf_vor_dreiviertel" />

                <CheckBox
                    android:id="@+id/fuenf_nach_dreiviertel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="@string/fuenf_nach_dreiviertel" />


            <Space
                android:layout_width="fill_parent"
                android:layout_height="15sp" />


                <LinearLayout style="@style/DialogItem">

                    <TextView
                        style="@style/DialogLabel"
                        android:text="@string/viertel" />

                    <Spinner
                        android:id="@+id/viertel_combo"
                        style="@style/DropDownCombo" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/kurz_vor_viertel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="@string/kurz_vor_viertel" />

                <CheckBox
                    android:id="@+id/kurz_nach_viertel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="@string/kurz_nach_viertel" />

                <CheckBox
                    android:id="@+id/fuenf_vor_viertel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="@string/fuenf_vor_viertel" />

                <CheckBox
                    android:id="@+id/fuenf_nach_viertel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="@string/fuenf_nach_viertel" />




            <Space
                android:layout_width="fill_parent"
                android:layout_height="15sp" />

                <TextView
                    style="@style/DialogLabel"
                    android:text="@string/time_of_day" />

                <LinearLayout style="@style/DialogItem">

                    <TextView
                        style="@style/DialogLabelSmall"
                        android:text="@string/morgen" />

                    <Spinner
                        android:id="@+id/morgen"
                        style="@style/DropDownCombo" />
                </LinearLayout>

                <LinearLayout style="@style/DialogItem">

                    <TextView
                        style="@style/DialogLabelSmall"
                        android:text="@string/vormittag" />

                    <Spinner
                        android:id="@+id/vormittag"
                        style="@style/DropDownCombo" />
                </LinearLayout>

                <LinearLayout style="@style/DialogItem">

                    <TextView
                        style="@style/DialogLabelSmall"
                        android:text="@string/mittag" />

                    <Spinner
                        android:id="@+id/mittag"
                        style="@style/DropDownCombo" />
                </LinearLayout>

                <LinearLayout style="@style/DialogItem">

                    <TextView
                        style="@style/DialogLabelSmall"
                        android:text="@string/nachmittag" />

                    <Spinner
                        android:id="@+id/nachmittag"
                        style="@style/DropDownCombo" />
                </LinearLayout>

                <LinearLayout style="@style/DialogItem">

                    <TextView
                        style="@style/DialogLabelSmall"
                        android:text="@string/abend" />

                    <Spinner
                        android:id="@+id/abend"
                        style="@style/DropDownCombo" />
                </LinearLayout>

                <LinearLayout style="@style/DialogItem">

                    <TextView
                        style="@style/DialogLabelSmall"
                        android:text="@string/nacht" />

                    <Spinner
                        android:id="@+id/nacht"
                        style="@style/DropDownCombo" />
                </LinearLayout>

                <LinearLayout style="@style/DialogItem">

                    <TextView
                        style="@style/DialogLabelSmall"
                        android:text="@string/early" />

                    <Spinner
                        android:id="@+id/frueh"
                        style="@style/DropDownCombo" />
                </LinearLayout>

            <Space
                android:layout_width="fill_parent"
                android:layout_height="15sp" />


                <TextView
                    style="@style/DialogLabel"
                    android:text="@string/hybrid" />


                <CheckBox
                    android:id="@+id/mult_of_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:text="@string/stars" />

                <CheckBox
                    android:id="@+id/hybrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckboxClicked"
                    android:paddingRight="10dp"
                    android:text="@string/hybrid_desc" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>