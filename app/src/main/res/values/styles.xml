<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DropDownCombo" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">#ffffff</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/mybutton</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">25sp</item>

    </style>

    <style name="ClockWidget" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minEms">30</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:text">@string/initializing</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">#030303</item>
        <item name="android:singleLine">false</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_alignParentEnd">false</item>
        <item name="android:layout_alignParentRight">false</item>
    </style>


    <style name="DialogLabelSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:singleLine">false</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DialogLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:singleLine">false</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DialogItem">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="Button">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/mybutton</item>
    </style>

    <style name="HelpImage">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:src">@drawable/iicon</item>
        <item name="android:onClick">help</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ChromeStylePopup" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:minWidth">75dp</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

</resources>
